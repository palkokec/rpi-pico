void setup() {
  // put your setup code here, to run once:
  delay(1000);
  pinMode(LED, OUTPUT);
  digitalWrite(LED, HIGH); //turn backlight on

  mylcd.LCDInit(inverse, contrast, bias); // init  the LCD
  mylcd.LCDClear(0x00); // Clear whole screen
  mylcd.LCDFont(FontNumber); // Set the font
  mylcd.LCDgotoXY(0, 0); // (go to (X , Y) (0-84 columns, 0-5 blocks) top left corner
  mylcd.LCDString("Hello world!"); //print
  delay(2000);
  mylcd.LCDClear(0x00);
  mylcd.LCDCustomChar(raspbitmap, sizeof(raspbitmap) / sizeof(unsigned char), LCDPadding_None, true);
  delay(4000);

}

void loop() {
  // put your main code here, to run repeatedly:
  mylcd.LCDClear(0x00); // Clear whole screen
  mylcd.LCDgotoXY(0, 0);
  mylcd.LCDString("Display test");
  mylcd.LCDgotoXY(0, 1);
  mylcd.LCDString("Temperature:");
  mylcd.LCDgotoXY(0, 2);
  mylcd.printf("%2fC",analogReadTemp());
  delay(5000);
}
